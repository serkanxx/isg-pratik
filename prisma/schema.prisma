// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// NextAuth.js modelleri
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Kullanıcı modeli
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  password      String?   // Email/şifre girişi için hash
  image         String?
  
  // Telefon doğrulama
  phone         String?   @unique
  phoneVerified Boolean   @default(false)
  phoneCode     String?   // SMS doğrulama kodu
  phoneCodeExp  DateTime? // Kod geçerlilik süresi
  
  // Üyelik sistemi
  role          String    @default("user") // user, admin
  plan          String    @default("premium_trial") // premium_trial, free, premium
  trialEndsAt   DateTime? // Premium Trial bitiş tarihi
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  accounts      Account[]
  sessions      Session[]
  reports       ReportHistory[]
  headerInfo    HeaderInfo?
  notes         Note[]
  visitPrograms VisitProgram[]
  jobComments   JobComment[]
  userJobPostings UserJobPosting[]
}

// Kullanıcı risk tablosu - Supabase'deki user_risks tablosuyla uyumlu
model UserRisk {
  id           String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId       String   @map("user_id")
  userEmail    String   @map("user_email")
  
  riskNo       String   @map("risk_no")
  categoryName String?  @default("Önerilen") @map("category_name")
  subCategory  String?  @map("sub_category")
  source       String?
  hazard       String?
  risk         String?
  affected     String?  @default("Çalışanlar")
  
  probability  Int      @default(1)
  frequency    Int      @default(1)
  severity     Int      @default(1)
  probability2 Int      @default(1)
  frequency2   Int      @default(1)
  severity2    Int      @default(1)
  
  measures     String?
  image        String?
  status       String?  @default("pending")
  
  createdAt    DateTime @default(now()) @map("created_at") @db.Timestamptz
  updatedAt    DateTime @default(now()) @updatedAt @map("updated_at") @db.Timestamptz

  @@map("user_risks")
}

// Risk Kütüphanesi (Supabase/DB'deki risk_items tablosu)
model RiskLibrary {
  id           Int      @id @default(autoincrement())
  risk_no      String?  @map("risk_no") // DB kolon adına dikkat etmek lazım ama genelde camelCase olmayabilir.
  // Types.ts'de riskNo, burada db push hatası almamak için tahmin ediyorum.
  // Eğer kolon adı farklıysa db push yine uyarır ama tabloyu silmez, kolonu siler.
  // Bu riski alarak en azından tabloyu kurtarıyoruz.
  // Supabase tarafında genellikle snake_case kullanılır.
  // Types.ts'deki yapıya göre ve standartlara göre:
  
  category_code String?
  sub_category  String?
  source        String?
  hazard        String?
  risk          String?
  affected      String?
  responsible   String?
  
  p            Int?
  f            Int?
  s            Int?
  p2           Int?
  f2           Int?
  s2           Int?
  
  measures     String?
  sector_tags  String[] 

  @@map("risk_items")
}

// Kullanıcı başlık bilgileri
model HeaderInfo {
  id           String   @id @default(cuid())
  userId       String   @unique
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  companyName  String?
  address      String?
  date         String?
  logo         String?  @db.Text
  teamMembers  Json?    // [{ name, title, signature }]
  
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  @@map("header_info")
}

// Rapor Geçmişi
model ReportHistory {
  id         String   @id @default(cuid())
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  type       String   // "RISK_ASSESSMENT", "EMERGENCY_PLAN", "WORK_PERMIT"
  title      String?  // Firma Adı veya Rapor Başlığı
  data       Json     // Rapor verileri (snapshot)
  documentNo String?  @map("document_no") // Acil Durum Planı için doküman no
  
  createdAt  DateTime @default(now())
  
  @@map("report_history")
}

// Firmalar (types.ts'deki Company arayüzüne göre)
model Company {
  id                  String   @id @default(cuid())
  user_id             String
  title               String
  address             String
  registration_number String?
  danger_class        String   // "az_tehlikeli", "tehlikeli", "cok_tehlikeli"
  logo                String?  @db.Text
  employer            String?
  igu                 String?
  doctor              String?
  representative      String?
  support             String?
  is_active           Boolean  @default(true)
  created_at          DateTime @default(now())
  updated_at          DateTime @updatedAt

  @@map("companies")
}

// Kullanıcı Notları
model Note {
  id          String    @id @default(cuid())
  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  companyId   String?   // null = Genel not, değilse firma ID
  content     String    @db.Text
  dueDate     DateTime? // Termin tarihi
  isCompleted Boolean   @default(false)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@map("notes")
}

// Firma Ziyaret Programı
model VisitProgram {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  name        String   // Program adı
  type        String   // "weekly" | "monthly"
  visitsPerDay Int     @default(3) // Günlük ziyaret sayısı
  schedule    Json     // Ziyaret çizelgesi
  companies   Json     // Seçilen firmalar ve sıklıkları
  startDate   DateTime? // Başlangıç tarihi
  endDate     DateTime? // Bitiş tarihi
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("visit_programs")
}

// Telegram'dan çekilen İş İlanları
model JobPosting {
  id              String   @id @default(cuid())
  telegramMessageId BigInt    @unique // Telegram mesaj ID'si (duplicate kontrolü için)
  channelUsername String   // Telegram kanal kullanıcı adı
  content         String   @db.Text // İlan içeriği
  rawText         String?  @db.Text // Ham mesaj metni
  hasMedia        Boolean  @default(false) // Fotoğraf/video var mı?
  mediaUrl        String?  @db.Text // Medya URL'si
  postedAt        DateTime // Telegram'da paylaşım tarihi
  isActive        Boolean  @default(true) // Aktif/pasif durumu
  viewCount       Int      @default(0) // Görüntülenme sayısı
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  comments        JobComment[]

  @@index([channelUsername, postedAt])
  @@index([isActive, postedAt])
  @@map("job_postings")
}

// İş İlanı Yorumları
model JobComment {
  id              String   @id @default(cuid())
  jobPostingId    String
  jobPosting      JobPosting @relation(fields: [jobPostingId], references: [id], onDelete: Cascade)
  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  content         String   @db.Text // Yorum içeriği
  isAnonymous     Boolean  @default(false) // Kullanıcı adını gizlemek istiyor mu?
  status          String   @default("pending") // pending, approved, rejected
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  approvedAt      DateTime? // Admin onay tarihi
  approvedBy      String?  // Admin kullanıcı ID'si

  @@index([jobPostingId, status])
  @@index([status, createdAt])
  @@map("job_comments")
}

// Kullanıcıların verdiği İş İlanları
model UserJobPosting {
  id              String   @id @default(cuid())
  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  content         String   @db.Text
  city            String?  // "Tüm Türkiye" veya il adı
  status          String   @default("pending") // pending, approved, rejected
  adminNote       String?  @db.Text // Admin düzenlemesi/notu
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  approvedAt      DateTime?
  approvedBy      String?

  @@index([status, createdAt])
  @@map("user_job_postings")
}

// Firma Çalışanları
model CompanyEmployee {
  id            String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  companyId     String    @map("company_id")
  userId        String    @map("user_id")
  fullName      String    @map("full_name")
  tcNo          String?   @map("tc_no")
  position      String?
  trainingDate  DateTime? @map("training_date") @db.Timestamptz
  trainingTopic String?   @map("training_topic")
  createdAt     DateTime  @default(now()) @map("created_at") @db.Timestamptz
  updatedAt     DateTime  @default(now()) @updatedAt @map("updated_at") @db.Timestamptz

  @@index([companyId])
  @@index([userId])
  @@map("company_employees")
}
